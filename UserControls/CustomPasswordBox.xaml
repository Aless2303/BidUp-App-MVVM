<UserControl x:Class="BidUp_App.UserControls.CustomPasswordBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="300" Height="45">
    <Grid>
        <Border CornerRadius="20" Background="#FFFFFF" BorderBrush="#5B84B1FF" BorderThickness="1">
            <PasswordBox Name="PasswordInputBox"
                         Width="300"
                         Height="45"
                         VerticalContentAlignment="Center"
                         Padding="10,0,0,0"
                         Background="Transparent"
                         BorderThickness="0"
                         Foreground="Black"
                         PasswordChanged="PasswordInputBox_PasswordChanged" />
        </Border>

        <!-- Placeholder Text -->
        <TextBlock Name="PlaceholderText"
                   Text="{Binding Placeholder, RelativeSource={RelativeSource AncestorType=UserControl}}"
                   Foreground="Gray"
                   Margin="10,0,0,0"
                   VerticalAlignment="Center"
                   IsHitTestVisible="False" />
    </Grid>
</UserControl>