<Window x:Class="BidUp_App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BidUp_App.UserControls"
        xmlns:viewModel="clr-namespace:BidUp_App.ViewModels"
        mc:Ignorable="d"
        Title="SignInWindow"
        Height="645"
        Width="465"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E2F">

    <Window.DataContext>
        <viewModel:MainWindowViewModel/>
    </Window.DataContext>

    <Grid Background="#1E1E2F">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Top Row with Background Color -->
        <Border Grid.Row="0" Background="#5B84B1FF" Padding="10,5" CornerRadius="0,0,15,15">
            <TextBlock Text="BidUp"
                       FontSize="36"
                       FontWeight="Bold"
                       Foreground="#FCF6F5FF"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center" />
        </Border>

        <!-- Bottom Row for Sign In Form -->
        <Border Grid.Row="1" 
                VerticalAlignment="Center" 
                HorizontalAlignment="Center"
                Background="#2C2C3E" 
                Width="340"
                Padding="20"
                CornerRadius="15">
            <StackPanel>
                <!-- Custom Email TextBox with Placeholder -->
                <local:CustomTextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" 
                                     Width="300"
                                     Height="45"
                                     Margin="0,10,0,10"
                                     Placeholder="Enter your email" />

                <!-- Custom Password TextBox -->
                <local:CustomTextBox Text="{Binding Password, UpdateSourceTrigger=PropertyChanged}" 
                                     Width="300"
                                     Height="45"
                                     Margin="0,10,0,10"
                                     Placeholder="Enter your password" />

                <ComboBox SelectedValue="{Binding Role, UpdateSourceTrigger=PropertyChanged}"
                      SelectedValuePath="Content"
                      Width="300"
                      Height="45"
                      Margin="0,10,0,10"
                      Foreground="Gray"
                      Style="{StaticResource RoundedComboBoxStyle}">
                    <ComboBoxItem Content="Select Role" IsEnabled="False" />
                    <ComboBoxItem Content="Bidder" />
                    <ComboBoxItem Content="Admin" />
                    <ComboBoxItem Content="Seller" />
                </ComboBox>


                <!-- Buttons for Log In and Sign Up -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                    <!-- Log In Button -->
                    <Button Content="Log In"
                            Width="120"
                            Height="45"
                            Background="#5B84B1FF"
                            Foreground="#FCF6F5FF"
                            FontWeight="SemiBold"
                            Style="{StaticResource RoundedButtonStyle}"
                            Command="{Binding SignInCommand}" />

                    <!-- Sign Up Button -->
                    <Button Content="Sign Up"
                            Width="120"
                            Height="45"
                            Background="#89ABE3FF"
                            Foreground="#FCF6F5FF"
                            FontWeight="SemiBold"
                            Style="{StaticResource RoundedButtonStyle}"
                            Command="{Binding SignUpCommand}" />
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>